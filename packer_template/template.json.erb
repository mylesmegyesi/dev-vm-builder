{
  "builders": [
    {
      "type": "virtualbox",
      "boot_command": [
        "<esc><esc><enter><wait>",
        "/install/vmlinuz noapic preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
        "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
        "hostname={{ .Name }} ",
        "fb=false debconf/frontend=noninteractive ",
        "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA keyboard-configuration/variant=USA console-setup/ask_detect=false ",
        "initrd=/install/initrd.gz -- <enter>"
      ],
      "boot_wait": "5s",
      "disk_size": <%= @vm_config.disk_size %>,
      "guest_os_type": "Ubuntu_64",
      "headless": true,
      "http_directory": "<%= @vm_config.compiled_preseed_directory_path %>",
      "iso_checksum": "61d5e67c70d97b33c13537461a0b153b41304ef412bb0e9d813bb157068c3c65",
      "iso_checksum_type": "sha256",
      "iso_url": "http://releases.ubuntu.com/12.04/ubuntu-12.04.3-server-amd64.iso",
      "shutdown_command": "echo '<%= @vm_config.admin_username %>' | sudo -S shutdown -P now",
      "ssh_password": "<%= @vm_config.admin_password %>",
      "ssh_port": 22,
      "ssh_username": "<%= @vm_config.admin_username %>",
      "ssh_wait_timeout": "20m",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "<%= @vm_config.memory %>"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "<%= @vm_config.cpus %>"
        ]
      ]
    },
    {
      "type": "vmware",
      "boot_command": [
        "<esc><esc><enter><wait>",
        "/install/vmlinuz noapic preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
        "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
        "hostname={{ .Name }} ",
        "fb=false debconf/frontend=noninteractive ",
        "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA keyboard-configuration/variant=USA console-setup/ask_detect=false ",
        "initrd=/install/initrd.gz -- <enter>"
      ],
      "boot_wait": "5s",
      "disk_size": <%= @vm_config.disk_size %>,
      "disk_type_id": "2",
      "guest_os_type": "ubuntu-64",
      "headless": true,
      "http_directory": "<%= @vm_config.compiled_preseed_directory_path %>",
      "iso_checksum": "61d5e67c70d97b33c13537461a0b153b41304ef412bb0e9d813bb157068c3c65",
      "iso_checksum_type": "sha256",
      "iso_url": "http://releases.ubuntu.com/12.04/ubuntu-12.04.3-server-amd64.iso",
      "shutdown_command": "echo '<%= @vm_config.admin_username %>' | sudo -S shutdown -P now",
      "ssh_password": "<%= @vm_config.admin_password %>",
      "ssh_port": 22,
      "ssh_username": "<%= @vm_config.admin_username %>",
      "ssh_wait_timeout": "20m",
      "tools_upload_flavor": "linux",
      "tools_upload_path": "<%= File.join(@vm_config.home, 'VMWareTools.iso') %>",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "memsize": "<%= @vm_config.memory %>",
        "numvcpus": "<%= @vm_config.cpus %>"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "override": {
        "virtualbox": {
          "execute_command": "echo '<%= @vm_config.admin_username %>'|sudo -S sh '{{.Path}}'"
        },
        "vmware": {
          "execute_command": "echo '<%= @vm_config.admin_username %>'|sudo -S sh '{{.Path}}'"
        }
      },
      "scripts": ["<%= @vm_config.compiled_postinstall_script_path %>"]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "<%= @vm_config.vm_name %>-{{.Provider}}.box"
    }
  ]
}

